    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        <div class="header__top__left">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__center">
                            {{#if messages.noti}}
                            <p >{{messages.noti}}</p>
                            {{/if}}
                            {{#if messages.error}}
                            <p style="color: red;">{{messages.error}}</p>
                            {{/if}}
                            {{#if messages.success}}
                            <p style="color:blue;">{{messages.success}}</p>
                            {{/if}}
                            {{#if messages.warn}}
                            <p style="color:orange;">{{messages.warn}}</p>
                            {{/if}}
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3">
                        <div class="humberger__menu__widget">
                            <div class="header__top__right">
                                <div class="header__top__right__auth">
                                    <i class="fa fa-user-circle"></i>
                                    {{#if isAuth}}
                                    <a href="/user">{{authUser.DisplayName}}</a>
                                    <a href="/logout"><i class="fa fa-sign-out"></i></a>
                                    {{else}}
                                    <a href="/register"></i>Register</a>
                                    <a href="/login">Login</a>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">
                        <a href="#"><h2>LOGO</h2></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li {{#ifeq page "home"}}class="active" {{/ifeq}}><a href="/">Home</a></li>
                            <li {{#ifeq page "course"}}class="active" {{/ifeq}}><a href="/courses">Course List</a></li>
                            {{#if isAuth}}
                            {{#ifeq authUser.Role 0}}
                            <li {{#ifeq page "student"}}class="active" {{/ifeq}}><a href="/my-course">Student</a></li>
                            {{/ifeq}}
                            {{#ifeq authUser.Role 1}}
                            <li {{#ifeq page "student"}}class="active" {{/ifeq}}><a href="/my-course">Student</a></li>
                            <li {{#ifeq page "teacher"}}class="active" {{/ifeq}}><a href="/own-course">Teacher</a></li>
                            {{/ifeq}}
                            {{/if}}
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            {{#if isAuth}}
                            <li><a href="/wish"><i class="fa fa-heart"></i> <span>0</span></a></li>
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
