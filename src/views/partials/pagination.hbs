{{#ifgt nopages 1}}
<div class="w-100 d-flex justify-content-center mt-4">
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item {{#ifeq curpage 1}}disabled{{/ifeq}}">
        <a class="page-link" href="?page={{add curpage -1}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
          <span class="sr-only">Previous</span>
        </a>
      </li>
      {{#loop 1 nopages}}
      {{#ifeq ../curpage this}}
      <li class="page-item active"><a class="page-link" href="javascript:;">{{this}}</a></li>
      {{else}}
      <li class="page-item"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
      {{/ifeq}}
      {{/loop}}

      <li class="page-item {{#ifeq curpage nopages}}disabled{{/ifeq}}">
        <a class="page-link" href="?page={{add curpage 1}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          <span class="sr-only">Next</span>
        </a>
      </li>
    </ul>
  </nav>
</div>
{{/ifgt}}
