    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/public/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Studying</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <a href="/">Course</a>
                            <span>Studying</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Course Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <video
                        id="my-player"
                        class="video-js"
                        controls
                        height="500"
                        preload="auto"
                        poster="public/img/poster/poster-1.png"
                        data-setup='{}'>
                        <source src="/public/vid/{{SectionCur.Video}}" type="video/mp4" target="_blank"></source>

                    <p class="vjs-no-js">
                    </p>
                    </video>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-1" role="tab"
                                    aria-selected="true">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-2" role="tab"
                                    aria-selected="false">Syllabus</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                                    aria-selected="false">Reviews <span>(2)</span></a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane" id="tabs-1" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <h6>About this course</h6>
                                    <p>{{course.FullDescription}}</p>
                                    <h6>Teacher Infomation</h6>
                                        <p>{{course.DisplayName}}</p>
                                </div>
                            </div>
                                <div class="tab-pane active" id="tabs-2" role="tabpanel">
                                    <div class="lesson spad">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="lesson__table">
                                                        <table>
                                                            <thead>
                                                                <tr>
                                                                    <th>Title</th>
                                                                    <th>Description</th>
                                                                    <th>Learn</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                {{#each lessons}}
                                                                <tr>
                                                                    <td>{{LessonTitle}}</td>
                                                                    <td>{{LessonDescription}}</td>
                                                                    <td><button>ICON</button></td>
                                                                </tr>
                                                                {{/each}}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            <div class="tab-pane" id="tabs-3" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <div class="contact-form spad">
                                        <div class="container">
                                            {{#each rates }}
                                            <strong>{{DisplayName}}: </strong> <p>{{Feedback}}</p>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Course Details Section End -->


