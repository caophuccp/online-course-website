    <section class="product-details spad">
        <div class="container">
            <form action="" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="checkout__form">
                            <div class="row">
                                <div class="col-lg-12 col-md-12">
                                    <div class="checkout__input">
                                        <p>Lesson's Title</p>
                                        <input type="text" name="LessonTitle" required>
                                    </div>                               
                                </div>
                            </div>
                        </div>
                    </div> 
                    <div class="col-lg-6 col-md-6">
                        <div class="product__details__pic text-center">
                            <div class="product__details__pic__item">
                                <video id= "output" class="product__details__pic__item--large"
                                    src="" alt="Video demo">
                            </div>
                            <p><input type="file"  accept="video/*" name="video" id="file"  onchange="loadFile(event)" style="display: none;"></p>
                            <b><label for="file" style="cursor: pointer;" class="primary-btn">Change Video</label></b>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <p>Description</p>
                        <div class="checkout__input">
                            <textarea placeholder="About this course" name="LessonDescription"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-12 text-center">
                        <button type="submit" class="site-btn">ADD THIS LESSON</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
