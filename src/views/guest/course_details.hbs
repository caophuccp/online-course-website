    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/public/img/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Course's Details</h2>
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <a href="/">Course</a>
                            <span>Course's Details</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Course Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large"
                                src="/public/img/{{course.Avatar}}" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>{{course.CourseName}} - {{course.DisplayName}}</h3>
                        <div class="product__details__rating">
                            <div class="rating">
                                <i class="fa fa-star">{{#if course.Point}}{{course.Point}}{{else}}~{{/if}}/5 </i>
                                ({{course.Count}} Reviews)
                            </div>    
                        </div>
                        <div class="product__details__price">${{course.Price}}</div>
                        <p>{{course.ShortDescription}}</p>
                        {{#if soleInfo.isSole}}
                        <a href="/study/{{course.CourseID}}" class="primary-btn">Study Countinue</a>
                        {{else}}
                        <a href="/confirm/{{course.CourseID}}" class="primary-btn">register</a>
                        <a href="javascript:onClickHeart({{course.CourseID}})" class="heart-icon"><span class="icon_heart_alt"></span></a>
                        {{/if}}
                        <ul>
                            <li><b>Sold</b> <span>{{soleInfo.count}}</span></li>
                            <li><b>Promotion</b> <span>{{course.Discount}} % discount. <samp>5 days left</samp></span></li>
                            <li><b>Last update</b> <span>{{formatDate course.DateModified}}</span></li>
                            <li><b>Share on</b>
                                <div class="share">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="product__details__tab">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab"
                                    aria-selected="true">Description</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab"
                                    aria-selected="false">Syllabus</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab"
                                    aria-selected="false">Reviews <span>({{course.Count}})</span></a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tabs-1" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    <h6>About this course</h6>
                                    {{{course.FullDescription}}}
                                </div>
                            </div>
                            <div class="tab-pane" id="tabs-2" role="tabpanel">
                                <div class="lesson spad">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="lesson__table">
                                                        <table>
                                                            <thead>
                                                                <tr>
                                                                    <th>Title</th>
                                                                    <th>Description</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                {{#each lessons}}
                                                                <tr>
                                                                    <td>{{LessonTitle}}</td>
                                                                    <td>{{LessonDescription}}</td>
                                                                </tr>
                                                                {{/each}}
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                            <div class="tab-pane" id="tabs-3" role="tabpanel">
                                <div class="product__details__tab__desc">
                                    {{#each rates }}
                                        <strong>{{DisplayName}}: </strong> <p>{{Feedback}}</p>
                                    {{/each}}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Course Details Section End -->

    <!-- Related Courses Section Begin -->
    <section class="related-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title related__product__title">
                        <h2>Related Courses</h2>
                    </div>
                </div>
                </div>
                <div class="row">
                    {{#each relatedCourse }}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="/public/img/{{Avatar}}">
                                <div class="category"><i class="fa "><a href="/courses?cate={{CategoryID}}">{{CategoryName}}</a></i>
                                </div>
                                <div class="best__seller"><i class="fa fa-star">best seller</i></div>
                                <ul class="product__item__pic__hover">
                                    <li><a href="javascript:onClickHeart({{CourseID}})"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="/detail/{{CourseID}}"><i class="fa fa-external-link-square"></i></a></li>
                                    <li><a href="/confirm/{{CourseID}}"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="product__discount__item__text">
                                <h5><a href="/detail/{{CourseID}}">{{CourseName}}</a> - {{DisplayName}}</h5>
                                <div class="rating">
                                    <i class="fa fa-star">{{Point}}/5 </i>
                                    ({{Count}} Reviews)
                                </div>    
                                <div class="product__item__price">${{Price}}</div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    <!-- Related Courses Section End -->
