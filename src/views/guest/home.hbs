    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Department</span>
                        </div >  
                        <div class="sitebar__menu">
                            <ul >
                                {{#if catewithfield}}
                                {{#each catewithfield}}
                                <li><a href="#">{{FieldName}}</a>
                                    <ul class="header__menu__dropdown">
                                        {{#each categorys}}
                                            <li><a href="courses?cate={{CategoryID}}">{{CategoryName}}</a></li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                                {{/if}}
                            </ul>
                        </div>    
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-2 filter__sort">
                        </div>
                        <div class="hero__search">                        
                            <div class="hero__search__form">
                                <form action="/courses">
                                    <input type="text" placeholder="What do you need?" name="search">
                                    <button type="submit" class="site-btn">SEARCH</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="hero__item set-bg" data-setbg="public/img/hero/banner.jpg">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Sale Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Highlights of the Week</h2> <span>Editer choose</span>
                        </div>
                        <div class="row">
                            <div class="product__discount__slider owl-carousel">
                            {{#each courseEditerChoose}}
                                <div class="col-lg-4">
                                    <div class="product__discount__item">
                                        <div class="product__discount__item__pic set-bg"
                                            data-setbg="/public/img/{{Avatar}}">
                                            <div class="product__discount__percent">-{{Discount}}%</div>
                                            <div class="category"><i class="fa "><a href="/course?cate={{CategoryID}}">{{CategoryName}}</a></i>
                                            </div>
                
                                            <ul class="product__item__pic__hover">
                                                <li><a href="javascript:onClickHeart({{CourseID}})"><i class="fa fa-heart"></i></a></li>
                                                <li><a href="/detail/{{CourseID}}"><i class="fa fa-external-link-square"></i></a></li>
                                                <li><a href="/confirm/{{CourseID}}"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="product__discount__item__text">
                                            <h5><a href="/detail/{{CourseID}}">{{CourseName}}</a> - {{DisplayName}}</h5>
                                            <div class="rating">
                                                <i class="fa fa-star">{{Point}}/5 </i>
                                                ({{Count}} Reviews)
                                            </div>    
                                            <div class="product__item__price">${{Price}}</div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Sale Section End -->
    
    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Most Viewed</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active" data-filter="*">All</li>
                            {{#if catewithfield}}
                            {{#each catewithfield}}
                            {{#each categorys}}
                            <li data-filter=".{{CategoryName}}">{{CategoryName}}</li>
                            {{/each}}
                            {{/each}}
                            {{/if}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                {{#each allCourses}}
                <div class="col-lg-3 col-md-4 col-sm-6 mix {{CategoryName}}">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/public/img/{{Avatar}}">
                            <div class="category"><i class="fa "><a href=""> {{CategoryName}} </a></i>
                            </div>

                            <ul class="featured__item__pic__hover">
                                <li><a href="javascript:onClickHeart({{CourseID}})"><i class="fa fa-heart"></i></a></li>
                                <li><a href="/detail/{{CourseID}}"><i class="fa fa-external-link-square"></i></a></li>
                                <li><a href="/confirm/{{CourseID}}"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__discount__item__text">
                            <h5><a href="#">{{CourseName}}</a>{{DisplayName}}</h5>
                            <div class="rating">
                                <i class="fa fa-star">{{Point}}/5 </i>
                                ({{Count}} Reviews)
                            </div>    
                            <div class="product__item__price">${{Price}}</div>
                        </div>
                     </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
    <!-- Featured Section End -->

    <!-- Banner Begin -->
    <div class="banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="banner__pic">
                        <img src="/public/img/banner/banner-1.jpg" alt="">
